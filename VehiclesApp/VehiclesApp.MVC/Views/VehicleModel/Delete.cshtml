@model VehiclesApp.MVC.Models.ViewModels.VehicleModelViewModel

<h1>Delete</h1>

@if (Model is null)
{
    <p>No vehicle model was found with this Id.</p>
}
else
{
    <h4>Are you sure you want to delete this vehicle model?</h4>
    @await Html.PartialAsync("ModelViewPartial")

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Back to list</a>
    </form>
}
