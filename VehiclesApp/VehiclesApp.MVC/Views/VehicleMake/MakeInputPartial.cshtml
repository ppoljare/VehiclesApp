@model VehiclesApp.MVC.Models.InputModels.VehicleMakeInputModel

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Abrv</label>
        <input type="text" class="form-control" asp-for="Abrv" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>
